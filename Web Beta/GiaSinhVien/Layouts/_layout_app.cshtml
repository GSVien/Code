@{
    string isMobile = ViewBag.isModelMobile;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Teen Idol App</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="~/App_Lib/lib.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Styles/Views/App.min.css" />
    <script src="/App_Lib/jquery-2.2.1/jquery.js" type="text/javascript"></script>
    <script>
        function redirectlink(link) {
            if (link == 1) {
                window.location = "https://teenidol.vn";
            } else if (link == 2) {
                window.location = "https://teenidol.vn/schedule";
            } else if (link == 3) {
                window.location = "https://www.facebook.com/Teenidol.vn/?fref=ts";
            } else if (link == 4) {
                window.location = "https://teenidol.vn/giai-tri-cuc-vui-cung-hotgirl";
            } else if (link == 5) {
                window.location = "https://teenidol.vn/policy";
            }
        }
        function check(event) {
            $("#abcdefgh").toggleClass("toggled");
        }

        //#region [Google Analytics]

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments);
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m);
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-69818836-1', 'auto');
        ga('send', 'pageview');

        //#endregion
    </script>
    <style>
        #abcdefgh img {
            display: block;
        }

        #abcdefgh video {
            display: none;
        }

        #abcdefgh.toggled img {
            display: none;
        }

        #abcdefgh.toggled video {
            display: block;
        }
    </style>
</head>

<body>
    <div class="body">
        @if (isMobile == "dektop")
        {
            <div class="container web">
                <div class="row">
                    <div class="col-md-12 top">
                        <div class="pull-right button_menu">
                            <button class="btn btn-primary" onclick="redirectlink(1)">Trang Chủ</button>
                            <button class="btn btn-primary" onclick="redirectlink(2)">Lịch Diễn</button>
                            <button class="btn btn-primary" onclick="redirectlink(3)">Hổ Trợ</button>
                        </div>
                    </div>
                    <div class="col-md-12 content">
                        <div class="pull-left">
                            <div>
                                <a href="/">
                                    <img class="logo" alt="Teen Idol" src="/Content/Image/Logo/logo-w-200.png">
                                </a>
                                <br />
                                <a href="https://itunes.apple.com/us/app/teenidol-n%C3%A2ng-cao-gi%C3%A1-tr%E1%BB%8B-idol/id1219887331?ls=1&mt=8">
                                    <img alt="Teen Idol" src="/Content/Image/iphone-download.png">
                                </a>
                                <a href="https://play.google.com/store/apps/details?id=tfl.com.vn.teenidol&amp;hl=en">
                                    <img alt="Teen Idol" src="/Content/Image/android-download.png">
                                </a>
                            </div>
                        </div>
                        <div class="pull-right" ng-click="onclick(4)">
                            <img class="background" src="/Content/Image/App/background_app1.png" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer">
                <div class="container" style="padding: 0">
                    <div class="follow-us">
                        <h1>Follow Us On</h1>
                        <a href="https://www.facebook.com/Teenidol.vn/?fref=ts">
                            <img src="/Content/Image/facebook-logo-blue.png" /> Facebook
                        </a>
                        <a href="https://www.youtube.com/channel/UC5v2kheQfJYjAci2oZfSWew">
                            <img src="/Content/Image/logo-youtube.png" /> Youtube
                        </a>
                    </div>

                    <div class="coppy-right" style="color: #555; height: 30px; font-weight: bold;">
                        <div class="pull-left" onclick="redirectlink(5)">Terms & conditions</div>
                        <div class="pull-right">Coppyright © 2016 by Teenidol</div>
                    </div>
                </div>
            </div>}
        @if (isMobile == "mobile")
        {
            <div class="container mobile">
                <div class="row">
                    <div class="col-md-12 content">
                        <img class="logo" alt="Teen Idol" src="/Content/Image/App/logo.png">
                        <br />
                        <img width="65%" style="margin-bottom: 10px" src="/Content/Image/App/text.png" /><br />

                        <a href="https://itunes.apple.com/us/app/teenidol-n%C3%A2ng-cao-gi%C3%A1-tr%E1%BB%8B-idol/id1219887331?ls=1&mt=8">
                            <img alt="Teen Idol" src="/Content/Image/iphone-download.png">
                        </a>
                        <a href="https://play.google.com/store/apps/details?id=tfl.com.vn.teenidol&amp;hl=en">
                            <img alt="Teen Idol" src="/Content/Image/android-download.png">
                        </a>
                    </div>
                </div>
                <div id="abcdefgh" class="bottom showvideo" onclick="check()">
                    @*<img class="background" src="/Content/Image/App/background_app1-mobile.png" />*@
                    <img style="position: relative;text-align: center;display: initial;" height="100%" class="background" src="/Content/Image/App/background_app1.png" />
                    <video style="padding-top: 10px;" width="100%" height="100%">
                        <source src="/Content/Video/nghikhung.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        }
    </div>
</body>

</html>



